<thumbnail>
	<TCEforms>
		<displayCond>FIELD:theme:IN:SIMPLEGALERY</displayCond>
		<onChange>reload</onChange>
		<label>LLL:EXT:pnf_gallery/themes/simplegallery/locallang_flexform.xml:thumbnail</label>	
		<config>
			 <type>check</type>
			<default>1</default>
		</config>
	</TCEforms>
</thumbnail>
<thumbnailwidth>
	<TCEforms>
		<displayCond>FIELD:thumbnail:=:1</displayCond>
		<label>LLL:EXT:pnf_gallery/themes/simplegallery/locallang_flexform.xml:thumbnailwidth</label>
