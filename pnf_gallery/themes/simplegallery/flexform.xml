<imageCrop>
    <TCEforms>
        <label>LLL:EXT:pnf_gallery/themes/simplegallery/locallang_flexform.xml:imageCrop</label>
        <config>
            <type>select</type>
            <items type="array">
                <numIndex index="1" type="array">
                    <numIndex index="0">LLL:EXT:pnf_gallery/themes/simplegallery/locallang_flexform.xml:imageCrop.items.1</numIndex>
                    <numIndex index="1">0</numIndex>
                </numIndex>
                <numIndex index="2" type="array">
                    <numIndex index="0">LLL:EXT:pnf_gallery/themes/simplegallery/locallang_flexform.xml:imageCrop.items.2</numIndex>
                    <numIndex index="1">1</numIndex>
                </numIndex>
                <numIndex index="3" type="array">
                    <numIndex index="0">LLL:EXT:pnf_gallery/themes/simplegallery/locallang_flexform.xml:imageCrop.items.3</numIndex>
                    <numIndex index="1">height</numIndex>
                </numIndex>
                <numIndex index="4" type="array">
                    <numIndex index="0">LLL:EXT:pnf_gallery/themes/simplegallery/locallang_flexform.xml:imageCrop.items.4</numIndex>
                    <numIndex index="1">width</numIndex>
                </numIndex>
                <numIndex index="5" type="array">
                    <numIndex index="0">LLL:EXT:pnf_gallery/themes/simplegallery/locallang_flexform.xml:imageCrop.items.5</numIndex>
                    <numIndex index="1">landscape</numIndex>
                </numIndex>
                <numIndex index="6" type="array">
                    <numIndex index="0">LLL:EXT:pnf_gallery/themes/simplegallery/locallang_flexform.xml:imageCrop.items.6</numIndex>
                    <numIndex index="1">portrait</numIndex>
                </numIndex>
            </items>
        </config>
    </TCEforms>
</imageCrop>