<transition>
	<TCEforms>
		<label>LLL:EXT:pnf_gallery/themes/simplegallery/locallang_flexform.xml:transition</label>
		<config>
			<type>select</type>
			<items type="array">
				<numIndex index="1" type="array">
					<numIndex index="0">slide</numIndex>
					<numIndex index="1">slide</numIndex>
				</numIndex>
				<numIndex index="2" type="array">
					<numIndex index="0">fade</numIndex>
					<numIndex index="1">fade</numIndex>
				</numIndex>
				<numIndex index="3" type="array">
					<numIndex index="0">flash</numIndex>
					<numIndex index="1">flash</numIndex>
				</numIndex>
				<numIndex index="4" type="array">
					<numIndex index="0">pulse</numIndex>
					<numIndex index="1">pulse</numIndex>
				</numIndex>
				<numIndex index="5" type="array">
					<numIndex index="0">fadeslide</numIndex>
					<numIndex index="1">fadeslide</numIndex>
				</numIndex>
			</items>
		</config>
	</TCEforms>
</transition>
<transitionSpeed>
    <TCEforms>
        <label>LLL:EXT:pnf_gallery/themes/simplegallery/locallang_flexform.xml:transitionSpeed</label>
        <config>
            <type>input</type>
            <size>3</size>
            <default>400</default>
        </config>
    </TCEforms>
</transitionSpeed>
